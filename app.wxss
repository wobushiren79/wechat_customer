page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family:"Microsoft Yahei"!important;
}
input{
    font-family:"Microsoft Yahei"!important;
}
.weui-input{
    font-family:"Microsoft Yahei"!important;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
