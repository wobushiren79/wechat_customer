    position: absolute;
    top: 12px;
    right: 12px
}
.weui-cell_input_icon{
    padding-right: 40px;
}
.button-hover[type="primary"]{
    background-color: #3eac90;
}
button[type="primary"] {
color:#FFFFFF;
background-color:#48cfad;

}

/*tab*/
.tab{
    text-align: center;
    padding: 20rpx 0;
    border-bottom: 1px solid #3eac90;
    height: 115rpx;
    background-color: #FFFFFF;
    box-sizing: border-box;
}
.tab view{
    display: block;
    float: left;
    width: 25%;
    line-height: 75rpx;
    font-size: 28rpx;
    color: #a9a9a9;
}
.tab view navigator{
    display: inline-block;
}

.tab navigator.active{
    color: #48cfad;
    border-bottom: 2px solid #48cfad;
}

/*弹窗*/
/*弹窗*/
 
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  
/*content*/  
.drawer_box {  
  width: 650rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 3px;  
}  
  /*button*/  
.drawer_box .btn {  
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #000;  
  color: #fff;  
} 
.drawer_box .drawer_title{  
  padding:15px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
}  
.drawer_box .drawer_content {  
  height: 210px;  
  overflow-y: scroll; /*超出父盒子高度可滚动*/  
}  
  
.drawer_box .btn_ok{  
  padding: 10px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #3CC51F;  
}  
  

.drawer_box .weui-cells::before, .weui-cells::after {
  border: black!important;
}