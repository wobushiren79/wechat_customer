/* example/input/input.wxss */

.weui-btn-area {
  margin: 0 15px;
  padding-bottom: 10px;
}

/*页脚*/

.foot {
  display: block;
  text-align: center;
  color: #48cfad;
  margin-top: 48rpx;
}

.weui-cells::before, .weui-cells::after {
  border: none !important;
}

.weui-label {
  width: auto;
}

.weui-cell__hd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: left;
  min-height: 2.58823529em;
  line-height: 2.58823529em;
}

.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
}

.weui-cell_head .weui-cell__hd {
  font-size: 37rpx;
  color: #000;
}

.weui-cell_foot .weui-cell__hd, .weui-cell_foot .weui-cell__bd {
  font-size: 34rpx;
  color: #48cfad;
}

.weui-cell__hd {
  font-size: 34rpx;
  color: #000;
}

.weui-cell__bd {
  font-size: 37rpx;
  color: #353535;
}

.weui-cells {
  margin: 0.7em 0 0.3em 0;
}

.button-sp-area {
  width: 100%;
  text-align: center;
  padding: 5px 0;
}
