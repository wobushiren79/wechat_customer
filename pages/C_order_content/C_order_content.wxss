/* example/input/input.wxss */

.li {
  background-color: #fff;
  padding: 15rpx 15px 0 15px;
  border-radius: 6rpx;
}

.li_cell {
  padding: 5rpx 0;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  font-size: 30rpx;
  -webkit-box-align: start;
  -webkit-align-items: start;
  align-items: start;
}

.li_cell_hd {
  width: 150rpx !important;
}

.li_cell_bd {
  width: 540rpx !important;
  text-align: right;
}

.li_hd .li_cell_hd{
  flex: 1;
  text-align: left;
  font-size: 34rpx;
}

.li_hd .li_cell_hd image {
  width: 48rpx;
  height: 48rpx;
}

.li_hd .li_cell_bd{
  flex: 1;
  text-align: right;

  font-size: 34rpx;
}
.li_hd .li_cell_bd text{
  color: #ffa592;
}
.li_ft {
  color: #48cfad;
}
.color2{
  color: #888888;
  font-size: 26rpx;
}
.li_cell image{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
}

/*头部和尾部*/
.li_hd{
  height: 96rpx;
}
.li_hd, .li_ft {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.li_hd .li_cell_hd text{
  display: inline-block;
  margin-right: 26rpx;
  width: 7rpx;
  height: 34rpx;
  background-color: #48cfad;
  position: relative;
  top: 5rpx;
}
.li_ft view{
   flex: 1;
   text-align: center;
   margin: 42rpx 0;
   height: 30rpx;
   font-size: 30rpx;
   line-height: 30rpx;
   border-left: 1px solid #48cfad;
}
.li_ft view:first-of-type{
  border-left: none;
}

/*第二个ul*/
.ul2{
  margin: 15px 0;
}
.ul2 .li{
  border-top: 1px solid #f3f3f3;
  padding-top: 0;
}