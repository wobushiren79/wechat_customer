/* pages/others/evaluation_customer.wxss */
page {
  background: #fff;
  padding-bottom: 100rpx;
}

.display_flex {
  padding: 0 48rpx;
}

.stroe_name {
  height: 65rpx;
  vertical-align: middle;
  background: #efefef;
  font-size: 28rpx;
  color: #686868;
}

.stroe_name image {
  width: 24rpx;
  margin-right: 24rpx;
}

.star_num {
  height: 225rpx;
}

.star_num text {
  display: block;
  margin-right: 24rpx;
}

.star_num image {
  width: 70rpx;
  margin-right: 32rpx;
}

.star_num image:last-of-type {
  margin-right: 0;
}

.love .display_flex {
  padding: 0;
  height: 48rpx;
  width: 144rpx;
  border: 1px solid #c4c4c4;
  border-radius: 24rpx;
  justify-content: center;
  margin-right: 30rpx;
}
.love .display_flex.active{
  border-color: #48cfad;
}
.love .display_flex image {
  display: block;
  width: 22rpx;
  margin-right: 12rpx;
}

.love .display_flex text {
  display: block;
  font-size: 28rpx;
  color: #686868;
}

.textarea {
  padding: 24rpx 48rpx;
  margin-bottom: 10rpx;
}

.textarea textarea {
  display: block;
  width: 100%;
  background: #efefef;
  border-radius: 8rpx;
  height: 280rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #686868;
}

.textarea placeholder {
  font-size: 28rpx;
  color: #686868;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 7.5%;
  width: 85%;
  border: none;
  border-top: 1px solid #efefef;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #353535;
  text-align: center;
  background: transparent;
  outline: none;
  border-radius: 0;
}

.label{
  flex-wrap: wrap;
  margin-left: -7rpx;
  margin-right: -7rpx;
}
.label view{
  height: 48rpx;
   line-height: 48rpx; 
  box-sizing: border-box;
  border: 1px solid #c4c4c4;
  border-radius: 9rpx;
  font-size: 24rpx;
  color: #7e7e7e;
  padding: 0 20rpx;
  margin: 7rpx 12rpx;
}
.label view.active{
  border-color: #48cfad;
  color: #48cfad;
}
.files_img_wrap{
  margin-top: 20rpx;
}
.files_img {
  margin-left: -5rpx;
  margin-right: -5rpx;
}
.files_img .img_wrap{
  width: 33.3333%;
  box-sizing: border-box;
  padding: 5px;
  position: relative;
}
.files_img .img_wrap image{
  display: block;
  width: 100%;
  height: 150rpx;
  border-radius: 6rpx;
}
.files_img .img_wrap image.close{
  display: block;
  width: 50rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
}

.footer::after {
  display: none;
}

.footer:active {
  opacity: 0.7;
}