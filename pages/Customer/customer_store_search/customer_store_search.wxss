.weui-panel::before, .weui-panel::after {
  display: none;
}

.weui-panel__hd::after, .weui-media-box:before {
  left: 0;
  border-color: #efefef;
}

.weui-panel__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 96rpx;
  padding: 0 24rpx;
}

.weui-panel__hd input {
  flex: 1;
  margin: 0 24rpx;
  padding: 0 24rpx;
  border-left: 1px solid #c4c4c4;
  border-right: 1px solid #c4c4c4;
  font-size: 28rpx;
  color: #353535;
}

.weui-panel__hd .user {
  border-radius: 50%;
}

.weui-panel__hd image {
  display: block;
  width: 64rpx;
  height: 64rpx;
}
.weui-panel__hd .home:active{
  opacity: 0.7
}
.weui-media-box {
  align-items: flex-start;
  padding: 35rpx 24rpx;
  /* height: 240rpx; */
  box-sizing: border-box;
}

.weui-media-box__hd {
  margin-right: 24rpx;
  width: 135rpx;
  height: 135rpx;
  border-radius: 6rpx;
  overflow: hidden;
  background: #efefef;
}

.weui-media-box  .weui-media-box__title{
  font-size: 32rpx;
  color: #353535;
  font-weight: bold;
}
.weui-media-box  .weui-media-box__desc{
  font-size: 28rpx;
  color: #9d9d9d;
  line-height: 1.7;

  /* display: flex;
  align-items: flex-start */
}
.weui-media-box  .weui-media-box__desc>view{
  position: relative;
  padding-left: 30rpx;
}
.weui-media-box  .weui-media-box__desc image{
  width: 20rpx;
  position: absolute;
  top: 6rpx;
  left: 0;
  /* display: block; */
}
.weui-media-box  .weui-media-box__desc text{
