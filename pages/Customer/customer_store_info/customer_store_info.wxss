page {
  background: #fff;
}

/* 基本信息 */

.userinfo {
  background: #48cfad;
  height: 300rpx;
}

image {
  width: 100%;
}

.userinfo .info {
  display: flex;
  align-items: flex-start;
  padding: 35rpx 48rpx 0rpx 48rpx;
  font-size: 28rpx;
  color: #fff;
}

.userinfo .info .share image, .userinfo .info .content image {
  display: inline-block;
  width: 24rpx;
  margin-right: 8rpx;
}

.userinfo .info .share {
  position: relative;
}

.userinfo .info .share button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.userinfo .info .content {
  margin-top: 30rpx;
  color: #186b56;
}

.userinfo .img {
  flex-basis: 220rpx;
  height: 190rpx;
}

.userinfo .img image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 10rpx;
}
.userinfo view{
  margin-bottom: 10rpx;
}
.userinfo .text {
  color: #fff;
  flex: 1;
}

.userinfo .text image {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}

.userinfo .name text {
  display: block;
  font-size: 40rpx;
  padding-left: 44rpx;
  margin-top: -14rpx;
}

.userinfo .keyword text {
  /* font-size: 40rpx; */
  display: inline-block;
  margin-left: 42rpx;
  margin-right: 20rpx;
  position: relative;
}

.userinfo .keyword text::before {
  position: absolute;
  content: "";
  display: block;
  width: 6rpx;
  height: 6rpx;
  background: #fff;
  top: 50%;
  /* top: 0rpx; */
  left: -30rpx;
  transform: translateY(-50%);
  line-height: 28rpx;
}

/* 更多信息 */

.section_more .weui-cell__hd {
  width: 32rpx;
  height: 32rpx;
  margin-right: 24rpx;
  margin-top: -2rpx;
}

.section_more .weui-cell {
  height: 96rpx;
  padding: 0 24rpx 0 48rpx;
  /* padding-right: 48rpx; */
}

.section_more .weui-cell:active {
  opacity: 0.7;
}

.section_more .weui-cell::before, .section_more .weui-cells:after {
  border-color: #dbdbdb;
  left: 48rpx;
}

.section_more .weui-cells:before {
  display: none;
}

.section_img {
  padding: 0 48rpx;
  margin-top: 50rpx;
}

.title {
  position: relative;
  font-size: 28rpx;
  color: 37e7e7e;
  margin-left: 26rpx;
}

.title::before {
  position: absolute;
  content: "";
  width: 12rpx;
  height: 26rpx;
  border-radius: 10rpx;
  background: #48cfad;
  top: 50%;
  left: -26rpx;
  transform: translateY(-50%);
}

.section_img .img_list {
  padding: 26rpx 0 13rpx 0;
}

.section_img .img_list image {
  display: block;
  float: left;
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  margin-right: 26rpx;
  margin-bottom: 12rpx;
}

.section_book {
  padding: 0 48rpx;
}

.section_book .weui-cell {
  padding: 20rpx 0;
}

.section_book .weui-cell::before {
  display: none;
}

.section_book .weui-cell__hd {
  width: 120rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 36rpx;
  position: relative;
}

.section_book .weui-cell__hd .cell_mask {
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  width: 100%;
  height: 100%;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  z-index: 9;
}

.section_book .weui-cell__hd .cell_mask image {
  width: 24rpx;
  margin-right: 5rpx;
}

.section_book .weui-cell__hd image.img {
  display: block;
  width: 120rpx;
  height: 120rpx;
}

.section_book .weui-cell__bd view {
  padding-left: 24rpx;
  position: relative;
  font-size: 24rpx;
  color: #353535;
  line-height: 40rpx;
}

.section_book .weui-cell__bd view::before {
  content: "";
  position: absolute;
  height: 8rpx;
  width: 8rpx;
  background: #c0e2da;
  top: 50%;
  left: 0rpx;
  transform: translateY(-50%);
}

.section_text{
  padding: 0 48rpx;
  margin-top: 40rpx;
}
.section_text .content{
  color: #353535;
  font-size: 28rpx;
  line-height: 42rpx;
  text-indent: 2em;
}

.popup_img{
  position: fixed;
  top: 50%;
  left: 0;
  width: 100%;
  transform: translateY(-50%);
  z-index: 9999;
}
.popup_img,
.mask{
  display: none;
}
.popup_img.active,
.mask.active{
  display: block;
}