/* 基本信息 */

.userinfo {
  background: #48cfad;
  padding: 0 65rpx;
}

image {
  width: 100%;
}

.userinfo .info {
  display: flex;
  align-items: center;
  padding: 70rpx 0 40rpx 0;
  font-size: 28rpx;
  color: #fff;
}

.userinfo .info .share image, .userinfo .info .content image {
  display: inline-block;
  width: 24rpx;
  margin-right: 8rpx;
}

.userinfo .info .content {
  margin-top: 30rpx;
  color: #186b56;
}

.userinfo .img {
  flex-basis: 140rpx;
  height: 115rpx;
}

.userinfo .img image {
  width: 115rpx;
  height: 115rpx;
  border-radius: 10rpx;
}

.userinfo .text {
  color: #fff;
  flex: 1;
}

.userinfo .text image {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  margin-right: 20rpx;
}

.userinfo .text .stroe {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

/* 地址 */

.userinfo .address {
  box-sizing: border-box;
  position: relative;
}

.userinfo .address .btn {
  position: absolute;
  top: 50%;
  right: -24rpx;
  transform: translateY(-50%);
  width: 100rpx;
  height: 55rpx;
  border-radius: 50rpx;
  line-height: 55rpx;
  text-align: center;
  background: #2ab18f;
  color: #fff;
  box-sizing: border-box;
  padding-right: 10rpx;
}

.userinfo .address .dashed {
  display: block;
  margin: 10rpx 0;
}

.userinfo .address .text {
  width: 100%;
  box-sizing: border-box;
  /* padding: 0 85rpx 0 12rpx;  */
  padding-left: 12rpx;
  overflow: hidden;
  height: 80rpx;
  line-height: 80rpx;
  border-top: 1px dashed rgba(255, 255, 255, 0.6);
  border-bottom: 1px dashed rgba(255, 255, 255, 0.6);
}

.userinfo .address .text text {
  position: absolute;
  top: 50%;
  left: 0rpx;
  padding-left: 55rpx;
  padding-right: 85rpx;
  width: 100%;
  box-sizing: border-box;
  transform: translateY(-50%);
  overflow: hidden;
  height: 80rpx;
}

/* tab */

/* tab_hd */

.tab_hd {
  text-align: center;
  display: flex;
  background: #48cfad;
}

.tab_hd view {
  flex: 1;
}

.tab_hd view text {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  color: rgba(255, 255, 255, 0.6);
}

.tab_hd view.active text {
  border-bottom: 6rpx solid #fff;
  color: rgba(255, 255, 255, 1);
  display: inline-block;
}

.tab_bd_item {
  display: none;
}

.tab_bd_item.active {
  display: block;
}

.tab_bd .tab_bd_title {
  height: 80rpx;
  background: #fff;
  white-space: nowrap;
  text-align: center;
}

.tab_bd .tab_bd_title view {
  display: inline-block;
  line-height: 80rpx;
  padding: 0 30rpx;
  color: rgba(120, 120, 120, 0.8);
}

.tab_bd .tab_bd_title view.active {
  color: #41b396;
}

.tab_bd_list {
  padding: 12rpx;
  background: #fff;
}

.tab_bd_list .li {
  padding: 12rpx;
  background: #fff;
  width: 50%;
  float: left;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #353535;
}

.tab_bd_list .li .img_wrap {
  height: 339rpx !important;
  border-radius: 7rpx;
  overflow: hidden;
  background: #efefef;
}

.tab_bd_list .li .img_wrap image {
  width: 100%;
  height: 339rpx !important;
}

.tab_bd_list .li .num {
  font-weight: bold;
}

.weui-panel .star {
  position: relative;
  padding: 10rpx 0;
}

.weui-panel .star image {
  width: 24rpx;
  margin-right: 5rpx;
}

.weui-panel .star text {
  position: absolute;
  right: 0;
}

.weui-media-box__hd {
  align-self: flex-start;
}
